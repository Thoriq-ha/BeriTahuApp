<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">


    <ImageView
        android:id="@+id/beritahu_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_menu_book_24"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/beritahu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfair_display_bold"
        android:text="BeriTahuApp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@+id/beritahu_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beritahu_title"
        android:fontFamily="@font/playfair_display_italic"
        android:text="cek berita akurat terpercaya"
        android:textAlignment="center"
        android:textSize="11sp"
        tools:fontFamily="@font/playfair_display" />
</RelativeLayout>